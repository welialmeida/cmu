<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.cmu.hoponcmu.ResultQuizActivity">
    <TextView
        android:id="@+id/txv_quiz_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIZ RESULT"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_results"
        app:layout_constraintTop_toBottomOf="@+id/txv_quiz_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="LOGOUT"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20sp"
        android:background="@android:color/transparent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:onClick="backToHome"
        />

    <Button
        android:id="@+id/btn_back"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="BACK"
        android:textSize="24sp"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="backToSubmitQuiz"

        />

</android.support.constraint.ConstraintLayout>
