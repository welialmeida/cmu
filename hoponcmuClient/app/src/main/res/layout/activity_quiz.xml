<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="pt.ulisboa.tecnico.cmu.hoponcmu.QuizActivity">


    <TextView
        android:id="@+id/txv_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIZ"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"

        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@id/txv_quiz"/>


    <Button
        android:id="@+id/btn_tour_venues"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:text="tour venues"
        android:textSize="24sp"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginVertical="100dp"
        android:onClick="listVenues"

        app:layout_constraintTop_toBottomOf="@id/txv_print"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btn_submit_quiz"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:text="submit quiz"
        android:textSize="24sp"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginVertical="50dp"
        android:onClick="submitQuiz"

        app:layout_constraintTop_toBottomOf="@id/btn_tour_venues"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/btn_logout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="LOGOUT"
        android:textSize="20sp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/holo_orange_dark"
        android:onClick="backToHome"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</android.support.constraint.ConstraintLayout>
